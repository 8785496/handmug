{% extends 'base.html.twig' %}

{% block body %}
    <!-- banner -->
    <div class="banner" style="background-image: url({{ asset('images/1-1.jpg') }}); min-height: 0px; padding-bottom: 32px">
        <div class="container">
            <div class="header">
                <div class="logo">
                    <h1><a href="{{ url('homepage') }}">Оригинальные кружки <span>На заказ</span></a></h1>
                </div>
