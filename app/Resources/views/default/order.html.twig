            </div>
        </div>
    </div>
    <!-- //banner -->
    <div class="container">
        <ol class="breadcrumb" style="margin-bottom: 0px">
            <li><a href="{{ url('homepage') }}">Главная</a></li>
            <li class="active">Заявка</li>
        </ol>
    </div>
    <!-- order -->
    <div class="mail" id="mail">
